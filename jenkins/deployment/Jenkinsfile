pipeline {
    agent any

    environment {
        PYTHON_VERSION = '3.11'
        VENV_DIR = '.venv'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup Python Environment') {
            steps {
                script {
                    sh '''
                        # Create venv only if it doesn't exist
                        if [ ! -d "${VENV_DIR}" ]; then
                            echo "Creating new venv..."
                            python3 -m venv ${VENV_DIR}
                        else
                            echo "Using existing venv"
                        fi

                        . ${VENV_DIR}/bin/activate
                        echo "Upgrading pip..."
                        pip install --upgrade pip --quiet
                        echo "Installing/updating requirements..."
                        pip install -r requirements.txt --quiet
                    '''
                }
            }
        }

        stage('Lint') {
            steps {
                script {
                    sh '''
                        . ${VENV_DIR}/bin/activate
                        flake8 app/ --max-line-length=120 --exclude=__pycache__
                    '''
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh '''
                        . ${VENV_DIR}/bin/activate
                        pytest test_api.py -v --tb=short
                    '''
                }
            }
        }

        stage('Validate') {
            steps {
                script {
                    sh '''
                        . ${VENV_DIR}/bin/activate
                        python3 -m py_compile app/main.py
                        python3 -m py_compile app/config.py
                        python3 -m py_compile app/routers/instances.py
                        python3 -m py_compile app/services/aws_cli.py
                        python3 -m py_compile app/services/db.py
                        python3 -m py_compile app/services/notifications.py
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Build, lint, test, and validation passed successfully!'
        }

        failure {
            echo 'Build failed. Check logs above.'
        }
    }
}
