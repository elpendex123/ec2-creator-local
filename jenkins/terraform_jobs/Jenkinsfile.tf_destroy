pipeline {
    agent any

    parameters {
        string(name: 'INSTANCE_ID', description: 'Instance ID to destroy')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Destroy') {
            steps {
                script {
                    sh '''
                        echo "Destroying EC2 instance via Terraform..."
                        cd terraform_bash_scripts
                        bash -x ./tf_destroy.sh "${INSTANCE_ID}"
                    '''
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
